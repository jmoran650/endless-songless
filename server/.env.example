PORT=8080
SUPABASE_DB_URL=postgresql://postgres.<project-ref>:<password>@aws-0-<region>.pooler.supabase.com:6543/postgres
# DATABASE_URL=postgresql://...
JWT_SECRET=replace-with-a-long-random-secret
PGSSLMODE=require

# Comma-separated browser origins allowed to call the API (recommended in production).
# If unset, production falls back to same-origin-only.
CORS_ORIGIN=https://your-site.example.com

# Primary client origin used by realtime + CORS defaults.
CLIENT_URL=https://your-site.example.com

# Optional runtime toggles.
ENABLE_SOCKETS=true
SERVE_CLIENT=true

# Optional Deezer overrides.
DEEZER_PLAYLIST_ID=
DEEZER_PLAYLIST_QUERY=top
DEEZER_API_BASE_URL=https://api.deezer.com
DEEZER_CACHE_TTL_MS=300000

# Optional DB tuning.
DB_POOL_MAX=20
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECT_TIMEOUT_MS=10000
DB_STATEMENT_TIMEOUT_MS=15000
DB_QUERY_TIMEOUT_MS=15000
DB_APPLICATION_NAME=songless-server
